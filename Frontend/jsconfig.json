{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "target": "es6",
        "checkJs": true,
        "resolveJsonModule": true,
        "baseUrl": "src",
        "paths": {
            "**/*": ["**/*"]
        }
    },
    "exclude": ["node_modules", "**/node_modules/*"],
    "include": ["src"],
    "rules": {
        "no-restricted-imports": [
            "error",
            {
                "patterns": [
                    "@material-ui/*/*/*",
                    "!@material-ui/core/test-utils/*"
                ]
            }
        ]
    }
}
